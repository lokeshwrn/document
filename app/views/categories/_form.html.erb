<div class="heading">
  <span><%= @page_properties[:header]%></span>
</div>
<%= form_for @category do |f| %>
    <div class="form_container_right">
      <div class="form_element">
        <%= f.label :Name %>
        <%= f.text_field :name, class: 'form_field' %>
      </div>
      <div class="form_element">
        <%= f.label :Description %>
        <%= f.text_field :description, class: 'form_field' %>
      </div>
      <div class="form_element">
        <%= f.label :Publish %>
        <%= check_box_tag 'category[status]',@category.id, @category.status %>
      </div>
      <div class="form_element" align="center">
        <%= f.submit :submit %>
      </div>
    </div>

<% end %>

<style>
    .error_label{
        color:orangered;
    }
    .error_field{
        border:1px solid red;
    }
</style>
<script>
    $($('div').find("input[type=submit]")).click(function(e){
        $( "input" ).each(function( ) {
            $('div').find("input[type=text]").each(function(){
                var value=$(this).val();
                if (!value){
                    e.preventDefault();
                    $(this).addClass('error_field');
                    $(this).prev().addClass('error_label');
                }
                else{
                    $(this).removeClass('error_field');
                    $(this).prev().removeClass('error_label');
                }
            });
        });
    });
</script>