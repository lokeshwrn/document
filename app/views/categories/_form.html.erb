<style>
    .form_container_right{
        width: 50%;
        float: left;
    }
    .form_field{
        width: 100%;
        height: 25px;
    }
    .form_element{
        padding: 10px 0px;
        margin-right:10%;
    }
</style>

<%= form_for @category do |f| %>
    <div class="form_container_right">
      <div class="form_element">
        <%= f.label :Name %>
        <%= f.text_field :name, class: 'form_field' %>
      </div>
      <div class="form_element">
        <%= f.label :Description %>
        <%= f.text_field :description, class: 'form_field' %>
      </div>
      <div class="form_element">
        <%= f.label :Publish %>
        <%= check_box_tag 'category[status]' %>
      </div>
      <div class="form_element" align="center">
        <%= f.submit :submit %>
      </div>
    </div>

<% end %>