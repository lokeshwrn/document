<div class="heading">
  <span>Category</span>
  <div class="button">
    <span>
          <%#= link_to("New Category", :controller => 'categories', :action => 'new', :category_id => @sub_category.first.id)%>
    </span>
  </div>
</div>

<div class="index" align="center">
<% @category.each do |a| %>
  <a href="<%= 'sub_categories?category_id=' + a.id.to_s %>">
    <div class="article">
      <div class="head">
        <div class="title">
          <h3><%= a.name %></h3>
          <h6><%= a.description %></h6>
        </div>
        <div class="count">
          <span>
            <%= a.sub_categories.count%>
          </span>
          <p><%= a.sub_categories.count!=1 ? "Sub Category".pluralize : "Sub Category".singularize %></p>
        </div>
      </div>
    </div>
  </a>
<% end %>
</div>
