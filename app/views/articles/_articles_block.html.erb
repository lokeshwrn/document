<%if @articles.present?%>
    <div class="index" align="center">
      <% @articles.each do |a| %>
          <a href="<%= show_article_path(a.id) %>">
            <div class="article">
              <div class="head">
                <div class="title">
                  <h3><%= a.title %></h3>
                  <h6><%= a.description %></h6>
                </div>
                <div class="count">
          <span>
            <%= a.rating%>
          </span>
                  <p><%= a.rating!=1 ? "Stars".pluralize : "Stars".singularize %></p>
                </div>
              </div>
            </div>
          </a>
      <% end %>
    </div>
<%else%>
    <div class="index" align="center">
      <h4>No Data to Display</h4>
    </div>
<%end%>